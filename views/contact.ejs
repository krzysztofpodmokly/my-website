<%- include('includes/header.ejs') %>

    <!-- Custom styles -->
    <link rel="stylesheet" href="public/css/navigation.css">
    <link rel="stylesheet" href="public/css/form.css">

    <title><%= pageTitle %></title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="../public/assets/message.js"></script>
</head>

<body>

    <%- include('includes/nav.ejs') %>

    <section class="section-contact">
        <div class="contact">
            <div class="contact__form">
                <form action="/contact" class="form" method="POST">
                    <div class="margin-bottom-small">
                        <h2 class="heading-secondary">Contact me</h2>
                    </div>
                    <div class="form__group">
                        <input type="text" class="form__input" placeholder="Email address" id="name" required>
                        <label for="name" class="form__label">Full name</label>
                    </div>

                    <div class="form__group">
                        <input type="email" class="form__input" placeholder="Full Name" id="email" required>
                        <label for="email" class="form__label">Email address</label>
                    </div>
                    
                    <div class="form__group">
                        <textarea name="" class="form__message" cols="20" rows="3" placeholder="Enter message" id="message" required></textarea>
                    </div>

                    <div class="form__group">
                        <button class="btn btn--blue" type="submit">Send &rarr;</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    
<%- include('includes/end.ejs') %>